<div class="btn-group-vertical col-sm-12" role="group" aria-label="session_links">
<%- if controller_name != 'sessions' %>
  <%= link_to "サインイン", new_session_path(resource_name), :class => 'btn btn-default' %>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "サインアップ", new_registration_path(resource_name), :class => 'btn btn-default' %>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "パスワードを忘れてしまいました", new_password_path(resource_name), :class => 'btn btn-default' %>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "確認メールを再送信します", new_confirmation_path(resource_name), :class => 'btn btn-default' %>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "凍結解除メールを再送信します", new_unlock_path(resource_name), :class => 'btn btn-default' %>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "#{provider.to_s.titleize} でサインイン", omniauth_authorize_path(resource_name, provider), :class => 'btn btn-default' %>
  <% end %>
<% end %>
</div>